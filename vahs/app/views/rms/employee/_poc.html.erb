      </div>
			
      <br /><br />
      <div class="fieldset-left">
        <%= label_tag :email_address, "Email Address:" %>
        <%= text_field_tag :email_address, @employee.email_address, size: 55, name: 'employee[email_address]' %>
      </div>
    </div>
    <h3><a href='#' alt="Emergency Contact">Emergency Contact</a></h3>
    <div class="accordion-section">
      <div class="fieldset-left">
