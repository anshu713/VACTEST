      </div>
 
      <br /><br />
	  
      <div class="fieldset-left">
        <%= label_tag :city, "City:" %>
        <%= text_field_tag :city, @employee.city, name: 'employee[city]' %>
      </div>
	  
      <div class="fieldset-left">
        <%= label_tag :state, "State:" %>
        <%= text_field_tag :state, @employee.state, name: 'employee[state]' %>
      </div>

      <div class="fieldset-right">
        <%= label_tag :zip, "Zip:" %>
        <%= text_field_tag :zip, @employee.zip, name: 'employee[zip]' %>
      </div>

      <br /><br />
	  
      <div class="fieldset-left">
        <%= label_tag :home_phone, "Home Phone:" %>
