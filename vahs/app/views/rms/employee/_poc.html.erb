      <div class="fieldset-left">
        <%= label_tag :state, "State:" %>
        <%= text_field_tag :state, @employee.poc_state, name: 'employee[poc_state]' %>
      </div>

      <div class="fieldset-right">
        <%= label_tag :zip, "Zip:" %>
        <%= text_field_tag :zip, @employee.poc_zip, name: 'employee[poc_zip]' %>
      </div>

      <br /><br />
	  
