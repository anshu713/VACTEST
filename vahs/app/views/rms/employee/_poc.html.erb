      <br /><br />
			
      <div class="fieldset-left">
        <%= label_tag :email_address, "Email Address:" %>
        <%= text_field_tag :poc_email_address, @employee.poc_email_address, size: 55, name: 'employee[poc_email_address]' %>
      </div>
			
      <br /><br />
	  
      <div class="fieldset-left">
        <%= label_tag :notes, "POC Notes:" %>
        <%= text_area_tag :notes, @employee.poc_notes, size: "93x3", name: 'employee[poc_notes]' %>
      </div>
    </div>
  </div>
</div>
